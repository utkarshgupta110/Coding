{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile and run",
      "type": "shell",
      "command": "cmd.exe",
      "args": [
        "/c",
        "g++ -std=c++17 -o \"\"\"${fileDirname}\\${fileBasenameNoExtension}.exe\"\"\" \"\"\"${file}\"\"\" && pushd \"\"\"${fileDirname}\"\"\" && \"\"\"${fileBasenameNoExtension}.exe\"\"\" < input.txt > output.txt && popd"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Compile and run C++ using input.txt/output.txt (supports spaces in paths)"
    }
  ]
}
